<?php

include_once('ft_page.features.inc');

function ft_page_late_form_alter(&$form, &$form_state, $form_id){
  global $user;

  if(!is_ct_form($form,'npage')){
    return;
  }

  //disallow access to edit the help block only for administrators
  if($user->uid > 1 || !in_array("community manager",$user->roles)){
    $form['group_block']['#access'] = false;
  }
}