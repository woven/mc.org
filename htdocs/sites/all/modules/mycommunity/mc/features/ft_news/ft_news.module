<?php

include_once('ft_news.features.inc');

function ft_news_nodeapi(&$node, $op, $a3 = NULL, $a4 = NULL){
  if($node->type == "nnews"){
    switch($op){
      case 'presave':
        //strip tags from news item title
        if(!empty($node->title)){
            $node->title = strip_tags($node->title);
        }
        break;
    }
  }
}