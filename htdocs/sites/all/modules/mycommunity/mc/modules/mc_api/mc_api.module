	$results = db_query("SELECT DISTINCT u.uid FROM {users} u, {femail_ext_user_subscription} f WHERE u.uid = f.uid AND (tid = %d OR tid = 0) AND u.uid != %d AND f.setting=%d", $tid, $account->uid, '0');
